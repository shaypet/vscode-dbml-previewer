{
  "name": "dbml-previewer",
  "displayName": "DBML Previewer",
  "description": "Transform DBML files into interactive visual database diagrams with drag-and-drop tables, relationship tooltips, multi-schema support, and real-time preview updates",
  "version": "1.2.0",
  "publisher": "rizkykurniawan",
  "author": {
    "name": "Rizky Kurniawan",
    "email": "contact.rizkykurniawan@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kykurniawan/vscode-dbml-previewer.git"
  },
  "homepage": "https://github.com/kykurniawan/vscode-dbml-previewer#readme",
  "bugs": {
    "url": "https://github.com/kykurniawan/vscode-dbml-previewer/issues"
  },
  "keywords": [
    "dbml",
    "database",
    "diagram",
    "preview",
    "visualization",
    "schema",
    "erd",
    "database design",
    "sql",
    "interactive",
    "relationships",
    "flow chart",
    "entity relationship",
    "database modeling",
    "postgresql",
    "mysql",
    "database schema",
    "table relationships",
    "visual database"
  ],
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "license": "MIT",
  "icon": "icon.png",
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dbml-previewer.preview",
        "title": "Preview DBML",
        "category": "DBML Previewer",
        "icon": "$(open-preview)"
      },
      {
        "command": "dbml-previewer.previewFromExplorer",
        "title": "Preview DBML",
        "category": "DBML Previewer"
      },
      {
        "command": "dbml-previewer.exportToPNG",
        "title": "Export Diagram to PNG",
        "category": "DBML Previewer",
        "icon": "$(device-camera)"
      },
      {
        "command": "dbml-previewer.exportToSVG",
        "title": "Export Diagram to SVG",
        "category": "DBML Previewer",
        "icon": "$(file-media)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "dbml-previewer.previewFromExplorer",
          "when": "resourceExtname == .dbml",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "dbml-previewer.preview",
          "when": "resourceExtname == .dbml",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "dbml-previewer.preview",
          "when": "resourceExtname == .dbml",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "dbml-previewer.preview",
          "when": "resourceExtname == .dbml"
        },
        {
          "command": "dbml-previewer.previewFromExplorer",
          "when": "false"
        },
        {
          "command": "dbml-previewer.exportToPNG",
          "when": "dbmlPreviewerActive"
        },
        {
          "command": "dbml-previewer.exportToSVG",
          "when": "dbmlPreviewerActive"
        }
      ]
    },
    "keybindings": [
      {
        "command": "dbml-previewer.preview",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d",
        "when": "resourceExtname == .dbml && editorTextFocus"
      }
    ],
    "languages": [
      {
        "id": "dbml",
        "aliases": [
          "DBML",
          "dbml"
        ],
        "extensions": [
          ".dbml"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
      "title": "DBML Previewer",
      "properties": {
        "diagram.inheritThemeStyle": {
          "type": "boolean",
          "default": false,
          "description": "Whether to inherit styling from the current VS Code theme. When disabled, uses a clean light theme optimized for diagram readability."
        },
        "diagram.edgeType": {
          "type": "string",
          "default": "smoothstep",
          "enum": [
            "straight",
            "step",
            "smoothstep",
            "bezier"
          ],
          "enumDescriptions": [
            "Default React Flow edge with curves",
            "Straight line between nodes",
            "Step-style edge with right angles",
            "Smooth step edge with rounded corners",
            "Bezier curve edge"
          ],
          "description": "The type of edge/connection lines to use for table relationships in the diagram."
        },
        "diagram.exportQuality": {
          "type": "number",
          "default": 0.95,
          "minimum": 0.1,
          "maximum": 1.0,
          "description": "Image quality for PNG exports (0.1 to 1.0). Higher values produce better quality but larger file sizes."
        },
        "diagram.exportBackground": {
          "type": "boolean",
          "default": true,
          "description": "Include background in exported images. When disabled, exported images have a transparent background."
        },
        "diagram.exportPadding": {
          "type": "number",
          "default": 20,
          "minimum": 0,
          "maximum": 100,
          "description": "Padding around the diagram in exported images (in pixels)."
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test",
    "build": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "vscode:prepublish": "npm run build",
    "package": "vsce package --no-yarn",
    "publish": "vsce publish --no-yarn"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@xyflow/react": "^12.0.0",
    "dagre": "^0.8.5",
    "@dbml/core": "^3.2.0",
    "html-to-image": "1.11.11"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "eslint": "^9.25.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@babel/preset-react": "^7.22.0",
    "babel-loader": "^9.1.0",
    "css-loader": "^6.8.0",
    "style-loader": "^3.3.0"
  }
}